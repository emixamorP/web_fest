<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <link rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text></svg>">
        {# Run `composer require symfony/webpack-encore-bundle` to start using Symfony UX #}
        {% block stylesheets %}
            {{ encore_entry_link_tags('app') }}
        {% endblock %}

        {% block javascripts %}
            {{ encore_entry_script_tags('app') }}
        {% endblock %}
    </head>
    <body>

      <nav class="navbar navbar-expand-lg navbar-light bg-light">

        <a class="navbar-brand" href="{{ path('app_home') }}">Home</a>

        <div class="collapse navbar-collapse" id="navbarNav">
          <ul class="navbar-nav ml-auto">

            {% if is_granted('IS_AUTHENTICATED_FULLY') %}
              {% if 'ROLE_ADMIN' in app.user.roles %}
                <li class="nav-item">
                  <a class="nav-link" href="{{ path('app_user_index') }}">Utilisateurs</a>
                </li>
              {% endif %}
                <li class="nav-item">
                  <a class="nav-link" href="{{ path('app_groupe') }}">Groupes</a>
                </li>

                <li class="nav-item">
                  <a class="nav-link" href="{{ path('app_etablissement') }}">Etablissements</a>
                </li>

                <li class="nav-item">
                  <a class="nav-link" href="{{ path('app_user_account') }}">Mon compte</a>
                </li>

              {% else %}
                <li class="nav-item">
                  <a class="nav-link" href="{{ path('app_login') }}">Connexion</a>
                </li>

                <li class="nav-item">
                  <a class="nav-link" href="{{ path('app_register') }}">S'inscrire</a>
                </li>

            {% endif %}
          </ul>
        </div>

      </nav>

    </body>

        {% block body %}{% endblock %}

    </body>
      
<script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.5.4/dist/umd/popper.min.js"></script>
<script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
</html>
