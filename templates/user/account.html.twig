{% extends 'base.html.twig' %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>
<link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">

<div class="container mt-5">

<table class="table table-bordered table-striped">
        <h2>Mon compte</h2>
        <thead class="thead-dark">
            <tr>
                <th>Prénom :</th>
                <td>{{ user.firstname }}</td>
            </tr>
            <tr>
                <th>Nom :</th>
                <td>{{ user.lastname }}</td>
            </tr>
            <tr>
                <th>Civilité :</th>
                <td>{{ user.gender ? 'Femme' : 'Homme' }}</td>
            </tr>
            <tr>
                <th>Email :</th>
                <td>{{ user.email }}</td>
            </tr>
        </thead>
    </table>
        <div class="d-flex justify-content-start mt-3">
            <a href="{{ path('app_user_edit', {'id': user.id}) }}" class="btn btn-primary btn-sm me-2">Modifier</a>
            {{ include('user/_delete.html.twig') }}
        </div>
        <div class="d-flex justify-content-end">
            <a class="btn btn-danger btn-sm" href="{{ path('app_logout') }}">Déconnexion</a>
        </div>
</div>
{% endblock %}
